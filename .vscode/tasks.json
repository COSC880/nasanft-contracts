{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "anchor build"
        },
        {
            "label": "deploy",
            "type": "shell",
            "dependsOn": "build",
            "command": "${workspaceFolder}/scripts/deploy.sh ${input:walletName}"
        },
        {
            "label": "install",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/install.sh"
        },
        {
            "label": "connectToLocalNet",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/connectToLocalNet.sh"
        },
        {
            "label": "connectToDevNet",
            "type": "shell",
            "command": "source ${workspaceFolder}/scripts/setEnv.sh && solana config set --url https://api.devnet.solana.com"
        },
        {
            "label": "createWallet",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/createWallet.sh ${input:walletName} ${input:defaultWallet}"
        },
        {
            "label": "getPublicAddress",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/getPubAddress.sh ${input:walletName}"
        },
        {
            "label": "addSol",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/addSol.sh ${input:walletName} ${input:amountOfSol}",
        }
    ],
    "inputs": [
        {
            "id": "walletName",
            "description": "Name of your wallet",
            "default": "id",
            "type": "promptString"
        },
        {
            "id": "installerDir",
            "description": "Temporary location to store the installer",
            "default": "~/tempInstallerDir",
            "type": "promptString"
        },
        {
            "id": "defaultWallet",
            "description": "If --not-default specified this wallet will not be specified as the default wallet. Otherwise it will be set as the default wallet",
            "default": "",
            "options": [
                "",
                "--not-default"
            ],
            "type": "pickString"
        },
        {
            "id": "amountOfSol",
            "description": "The amount of SOL to add to the wallet",
            "default": "1",
            "options": [
                "1",
                "5",
                "25",
                "50",
                "100"
            ],
            "type": "pickString"
        }
    ],
}